.banner
	padding 70px
	background url(../img/content/bg.jpg) center 0 no-repeat
	background-size cover

	&:after
		content ''
		absolute($left:0, $right:0, $bottom: 0)
		display block
		size(100%, 20px)
		background url(../img/general/wave-bottom.png)
	.container
		display: flex
		justify-content center
		align-items  flex-end
		min-height 550px

.banner-text
	text-align center
	font-size 30px
	font-family titleFont
	line-height 1.4
	color #fff

