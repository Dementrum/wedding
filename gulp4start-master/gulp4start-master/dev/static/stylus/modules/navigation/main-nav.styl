.header-nav__list
	absolute($top:80px, $left:0)
	z-index 1
	display none

.header-nav__link
	display inline-block
	size(220px, 50px)
	padding 15px 15px 15px 20px
	background-color #fff
	color greenColor
	border-bottom 1px solid greenColor
	transition all linear .1s
	
	&:hover
		background greenColor
		color #fff