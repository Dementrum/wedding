.reviews
	height 100%
	background url('../img/general/previews-bg.jpg') 0 0 no-repeat

	&:before
		content ''
		display block
		absolute($left:0, $right:0, $bottom: -1px)
		height 21px
		background #fff url('../img/general/wave-preview-bottom.png') -10px -10px no-repeat
		z-index 1

.reviews-slider
	width 1000px
	margin 0 auto
	position relative

.reviews-slider__controls
	position absolute
	top 50%
	margin-top -22px
	size(45px)
	cursor pointer


.reviews-slider-prev
	left -90px
	background url('../img/general/left-arrow.svg') 0 0 no-repeat
	background-size 100%

.reviews-slider-next
	right -90px
	background url('../img/general/right-arrow.svg') 0 0 no-repeat
	background-size 100%

.reviews-item
	height 305px
	padding 5px 20px 40px
	background url('../img/general/previews-bg-item.jpg') no-repeat
	background-size cover
	border-radius 15px
	min-height 300px
	min-width 472px
	color greenColor
	margin 14px

.reviews-author
	flex 1 auto
	margin-right 15px
	text-align center

.reviews-content
	flex 2 auto
	font-size 16px
	line-height 1.3
	font-family italicFont
	p
		display inline-block
		float right
		width 250px
		margin 10px
		text-align justify

.reviews-photo.title-name
	margin-top 150px



.reviews-photo
	size(140px)
	border-radius 50%
	margin 15px 2px 10px
	display inline-block
	float left

	&.reviews-photo--1
		background url('../img/content/previews/item1.jpg') -140px 0 no-repeat
	&.reviews-photo.reviews-photo--2
		background url('../img/content/previews/item2.jpg') -46px 0 no-repeat
	&.reviews-photo.reviews-photo--3
		background url('../img/content/previews/item3.jpg') -95px 0 no-repeat
	&.reviews-photo.reviews-photo--4
		background url('../img/content/previews/item4.jpg')  -130px -45px no-repeat

.reviews-author-name 
	display block
	margin-bottom 5px
	font-size 24px
	font-family boldFont



.reviews-data 
	display block	
	margin-top 10px
	font-size 20px

.slick-dots
	bottom -30px
	li
		button
			border 1px solid #fff
			border-radius 50%
			&:before
				display none
				

		&.slick-active
			button
				background-color #fff


.slick-dots
	li
		.slick-active
			button:before
				color #fff
				opacity 1



	
	