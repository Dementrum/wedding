footer
  background: #000
  color #fff
  padding 20px


  .container
    max-width 960px


.footer
  &-content
    width 100%
    display flex
    justify-content space-between
    flex-wrap wrap
    align-items center

  &-logo
    img
      max-width 100px
  &-about
      max-width 250px

.footer-about
    color grayColor
    
    span 
        display block

.footer-company__name 
    font-family boldFont
    text-transform uppercase         

.footer-phone

    a
      position relative
      padding-left 30px
      display block
      color #fff 
      
      &:before
          content ''
          display block
          absolute($top:4px, $left:10px)
          size(15px)
      
    &--city 
        &:before
            background url(../img/general/phone.svg) 0 0 no-repeat
            background-size 100%
      
    &--mobile 
        &:before
            background url(../img/general/mobile.svg) 0 0 no-repeat
            background-size 100%
      
    &--mobile
        &:before
            background url(../img/general/mobile.svg) 0 0 no-repeat
            background-size 100%

              
.footer-coryright
  width 100%
  text-align center
  color grayColor
  margin 10px 0 10px

.footer-coryright
  span:last-child
      margin-left 13px
  
  a
      color grayColor
      text-decoration underline

.footer-social
  li
    display inline-block
    color #fff
    margin-left 5px
  &__link
    display block
    size(50px)
    border 1px solid #000
    border-radius 50%
  &--vk
    background #fff url('../img/general/vk.svg') 0 0 no-repeat
    background-size 100%

  &--inst
    background #fff url('../img/general/instagram-footer.svg') 0 0 no-repeat
    background-size 100%

  &--fb
    background #fff url('../img/general/fb.svg') 0 0 no-repeat
    background-size 100%

  &--skype
    background #fff url('../img/general/skype.svg') 0 0 no-repeat
    background-size 100%

  &--youtube
    background #fff url('../img/general/youtube.svg') 0 0 no-repeat
    background-size 100%
